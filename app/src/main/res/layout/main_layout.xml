<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#000000"
    android:orientation="horizontal">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/b"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/b"
                android:drawableLeft="@drawable/ic_beach"
                android:drawablePadding="10dp"
                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"

                android:text="ทะเล"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/w"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/w"
                android:drawableLeft="@drawable/ic_waterfall"
                android:drawablePadding="10dp"

                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="น้ำตก"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/m"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/m"
                android:drawableLeft="@drawable/ic_mountain"
                android:drawablePadding="10dp"
                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="ภูเขา"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/c"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/c"
                android:drawableLeft="@drawable/ic_cave"
                android:drawablePadding="10dp"
                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="ถ้ำ"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/k"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/canu"
                android:drawableLeft="@drawable/ic_canu"
                android:drawablePadding="10dp"
                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="ล่องแก่ง"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />

            <Button
                android:id="@+id/s"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@xml/s"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:elegantTextHeight="false"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="ค้นหา"
                android:textColor="#000000"
                android:textSize="18dp"
                android:typeface="serif" />
        </TableRow>
    </TableLayout>

</LinearLayout>